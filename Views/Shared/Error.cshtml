@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
 <h4>An error occured while processing your request</h4>
 <h5 class="mt-3 mb-3">Exception Details</h5>
 <div class="alert alert-danger mb-2">
   <h5>Exception path : @ViewBag.ExceptionPath</h5>
 </div>
 <div class="alert alert-danger mb-2">
   <h5>Exception Message : @ViewBag.ExceptionMessage</h5>
 </div>
 <div class="alert alert-danger">
   <h5>Exception StackTrace : @ViewBag.ExceptionStackTrace</h5>
 </div>
</div>
