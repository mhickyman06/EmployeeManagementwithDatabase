@model IEnumerable<EmployeeManagementwithdatabase1.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
 .cd{
     width:400px;
 }
 .imgs{
     height:200px;
   width:auto;
 }
</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container mt-3 ">
    <div class="card-deck ">
        @foreach (var item in Model)
        {
        <div class="card  m-4 " style="min-width:18rem;max-width:30.5%">
            <div class="card-header">
                <h4>@item.Name</h4>
            </div>
               @{
                   var Photopath = "~/Img/" + (item.PhotoPath ?? "img2.jpg");
               } 
                <img class="imgs card-img-top" src="@Photopath" asp-append-version="true" />  

            <div class="card-footer text-center">
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-Id="@item.Id">View</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-Id="@item.Id">Edit</a>
                <a class="btn btn-sm btn-warning" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
            </div>
        </div>
        }
    </div>
</div>
